# Additional Matplotlib Artists for easier plotting
import matplotlib.artist.Artist
import matplotlib.collections.LineCollection






class ColoredPlot(matplotlib.collections.LineCollection, object):
    def __init__(self, axes, x, y, **kwargs):
        self.axes = axes
        segments = zip(zip(x[:-1], y[:-1]), zip(x[1:], y[1:]))
        super(ColoredPlot, self).__init__(segments)
        
